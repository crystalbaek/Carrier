{{>layouts/header}}
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nanum+Brush+Script&display=swap" rel="stylesheet">
</head>
<!-- 검색 창 추가 원래{{isMainPage}}있었는데 이거때문에 검색창이 사라져서 지움 -->
<form class="searchs" style="text-align: center; margin: 50px">
    <input class="form-control me-2" id="input" style="width: 550px; height: 50px; font-size: 24px; display: inline-block; font-family: 'Nanum Brush Script', cursive;" type="search" placeholder="Search Brand" aria-label="Search">
    <button class="btn btn-outline-success" onclick="performSearch()" style=" font-size: 20px; font-family:'Nanum Brush Script', cursive; background-color: #fff;">Search</button>
</form>
<div class="three">
    <h1> Our Collection </h1>
        </div><div id="mask"></div>
</div>

<!-- main.mustache 내용 -->
<div class="card-container">
    {{#carrierList}}
    <div class="card" data-product="{{productId}}">
        <a href="/articles/product-details/{{productId}}">
        <img src="{{image}}" alt="Product Image">
        <div class="card-info">
            <p class="brand">{{brand}}</p>
            <p class="product-name">{{productName}}</p>
        </div>
        </a>
    </div>
    {{/carrierList}}
</div>

<!-- 페이드 영역-->
<div id="mask"></div>
<style>
    .container {
        text-align: center;
        font-family: 'YourFont', sans-serif;
    }
    .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center; /* 카드들을 수평으로 가운데 정렬 */
    }

    .card {
        border: 1px solid #ccc;
        border-radius: 5px;
        margin: 10px;
        padding: 10px;
        width: 200px;
        box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.3);
        font-family: Georgia, serif;
        font-size: 17px;
    }

    .card img {
        width: 100%;
        height: auto;
        max-height: 150px;
    }

    .card-info {
        margin-top: 10px;
        text-align: center;
        color: black; /* 글자색을 검은색으로 설정 */
        font-size: 17px;
        font-family: Georgia, serif;
    }

    .brand {
        font-weight: bold;
        margin-bottom: 5px;
        font-size: 17px;
        text-decoration: none;
        font-family: Georgia, serif;
    }
    .product-name {
        font-size: 14px;
        text-decoration: none;
        font-family: Georgia, serif;
    }

    .three h1 {
    font-size: 30px;
    font-weight: 500;
    letter-spacing: 0;
    line-height: 1.5em;
    padding-bottom: 15px;
    position: relative;

    color: #fff; /* 글자색 하양으로 변경 */
    padding-left: 80px; /* 왼쪽 패딩 추가하여 오른쪽으로 이동 */

    font-family: cursive;
    }
    .three h1:before {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    height: 5px;
    width: 55px;
    background-color: #111;
    }
    .three h1:after {
    content:"" ;
    position:absolute ;
    left:auto ; right:-.2em ; top:-.6em ;
    height:.2em ; width:.5em ;
        -ms-transform : rotate(140deg);     /* IE 9 */
        -webkit-transform : rotate(140deg); /* Chrome, Safari, Opera */
        transform : rotate(140deg);
     }
    /*배경에 화려한 빛나는 효과 애니메이션 추가 */
    @keyframes shine {
        0% {
            background-color: gray;
        }
        50% {
            background-color: silver;
        }
        100% {
            background-color: gray;
        }
    }

    body {
        animation: shine 4s linear infinite; /* 무한한 반짝임 애니메이션 추가 */
        font-family: Arial; 
    }
    /* 카드 호버 효과 정의 */
    .card:hover {
        transform: translate(0, -5px); /* 호버 시 약간 위로 이동하는 효과 */
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.3); /* 그림자 효과 추가 */
    }
</style>
    
<!-- jQuery 라이브러리를 불러옵니다. -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // 메인 페이지에서만 실행되도록 조건 추가
    {{#isMainPage}}
    document.addEventListener("DOMContentLoaded", function() {
        const searchForm = document.querySelector(".searchs");
        const title = document.querySelector("h1");
        searchForm.style.display = "block"; // 검색 창 보이게 변경
        title.style.display = "block"; // 제목 보이게 변경
    });
    {{/isMainPage}}
    /* 검색 로직 */
    function performSearch() {
        const searchTerm = document.getElementById('input').value;
        const newURL = '/articles/' + searchTerm;
        history.pushState({ path: newURL }, '', newURL);
        updateSearchResults(searchTerm);
    }
    // 드롭다운 버튼 클릭 시 드롭다운 메뉴를 토글하는 함수
    function toggleDropdown() {
        var dropdownMenu = document.querySelector('.dropdown-menu');
        if (dropdownMenu.style.display === 'block') {
            dropdownMenu.style.display = 'none';
        } else {
            dropdownMenu.style.display = 'block';
        }
    }

    // 드롭다운 메뉴 아이템을 클릭하여 페이지로 이동하는 함수
    function navigateToCommend1() {
        window.location.href = "/articles/commend1";
    }

    function navigateToCommend2() {
        window.location.href = "/articles/commend2";
    }

    function navigateToCommend3() {
        window.location.href = "/articles/commend3";
    }

    function navigateToCommend4() {
        window.location.href = "/articles/commend4";
    }

    // 페이지 로드 시 초기화
    document.addEventListener('DOMContentLoaded', function() {
        // 드롭다운 버튼 클릭 시 토글 함수 호출
        document.querySelector('#brandDropdownButton').addEventListener('click', toggleDropdown);
    });
</script>
